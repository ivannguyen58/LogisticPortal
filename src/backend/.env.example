# ===========================================
# ALSC Customer Portal - Environment Configuration
# Copy this file to .env and update values
# ===========================================

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration (Oracle)
DB_USER=portal_user
DB_PASSWORD=portal_password
DB_CONNECT_STRING=localhost:1521/XE
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_INCREMENT=2
DB_POOL_TIMEOUT=300
DB_STMT_CACHE_SIZE=30
DB_QUEUE_TIMEOUT=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=portal:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=alsc-portal
JWT_AUDIENCE=portal-api

# API Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Tracking Configuration
TRACKING_UPDATE_INTERVAL=30
TRACKING_REALTIME=true
TRACKING_MAX_EVENTS=100
TRACKING_NOTIFICATION_RETRIES=3

# External APIs Configuration
# IATA OneRecord
IATA_ONERECORD_URL=https://onerecord.iata.org/api/v1
IATA_ONERECORD_API_KEY=your-iata-onerecord-api-key
IATA_ONERECORD_TIMEOUT=30000
IATA_ONERECORD_ENABLED=false

# Customs API
CUSTOMS_API_URL=https://customs-api.gov.sg/v1
CUSTOMS_API_KEY=your-customs-api-key
CUSTOMS_API_TIMEOUT=30000
CUSTOMS_API_ENABLED=false

# Odoo ERP Integration
ODOO_API_URL=https://odoo.alsc.com/api/v1
ODOO_DATABASE=alsc_production
ODOO_USERNAME=portal_integration
ODOO_PASSWORD=your-odoo-password
ODOO_API_TIMEOUT=30000
ODOO_API_ENABLED=false

# Email Notifications
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@alsc.com

# SMS Notifications (Twilio)
SMS_NOTIFICATIONS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (Firebase)
PUSH_NOTIFICATIONS_ENABLED=false
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,text/plain
UPLOAD_PATH=./uploads

# AWS S3 Configuration (Optional)
AWS_S3_ENABLED=false
AWS_S3_BUCKET=alsc-portal-uploads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_ENABLED=true
LOG_FILENAME=app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5
LOG_DATABASE_ENABLED=false
LOG_DATABASE_LEVEL=error

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key-change-in-production
CSRF_ENABLED=false
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_METRICS_PATH=/metrics
MONITORING_HEALTH_PATH=/health

# Queue Configuration (Redis-based)
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=1
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000